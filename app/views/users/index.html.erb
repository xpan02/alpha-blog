<h1 class="center">Listing all users</h1>
<div align="center">
     <%= will_paginate @articles %> 
</div>
<% @users.each do |user|%>
<div align="center">
    <ul class="listing">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 well">
          <li><%= link_to gravatar_for(user), user_path(user) %></li> 
          <li class="article-title">
              <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if current_user && current_user.admin? %>
          <li><%= link_to "delete this user", user_path(user), method: :delete,
           data: { confirm: "Are you sure to delete to user" }
           %> </li>
          <% end %>
        </div>
    </div>
    </ul>
</div>
<% end %>
<div align="center">
     <%= will_paginate @articles %> 
</div>