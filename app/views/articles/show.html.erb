<h2 class="center">Title: <%=@article.title %></h2>
<div class="row">
<div class="well col-xs-8 col-xs-offset-2">
       <ul class="listing">
         <div class="row"  align="center">
            <div class="col-md-4 col-md-offset-4 ">
                <li>Created by</li>
            <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li> 
            <li class="article-title">
              <%= link_to @article.user.username, user_path(@article.user) %>
             </li>
          <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
            
        </div>
    </div>
    </ul> 
    <h4 class="center"<strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>
     <div class="article-actions">
         <% if logged_in? && @article.user==current_user %>
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary btn-xs", role: "button" %>
       
       <%= link_to "Delete this article", article_path(@article), class: "btn btn-danger btn-xs", role: "button",
                                                     method: :delete,
                                                     data:{confirm:"Are you sure?"} %>
        <% end %>
      <%= link_to "view all articles", articles_path,class: "btn btn-success btn-xs", role: "button" %>
     </div>

</div>
</div>

