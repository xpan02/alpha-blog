<h2 class="center">Title: <%=@article.title %></h2>
<div class="row">
<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center"<strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>
     <div class="article-actions">
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary btn-xs", role: "button" %>
       
       <%= link_to "Delete this article", article_path(@article), class: "btn btn-danger btn-xs", role: "button",
                                                     method: :delete,
                                                     data:{confirm:"Are you sure?"} %>
      <%= link_to "view all articles", articles_path,class: "btn btn-success btn-xs", role: "button" %>
     </div>

</div>
</div>

