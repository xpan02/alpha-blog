<h1 class="center">Listing all articles</h1>
<% @articles.each do |article|%>
    <div class="row">
      <div class="well well-lg col-xs-8 col-xs-offset-2">
          <div class="article-title">
          <%= link_to "#{article.title}",article_path(article) %>
          </div>
          <div class="article-body">
              <%= article.description.truncate(100) %>
          </div>
          <div class="article-actions">
            <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-primary btn-xs", role: "button" %>
            <%= link_to "Delete this article", article_path(article), class: "btn btn-danger btn-xs", 
                                                                       role: "button",
                                                                        method: :delete,
                                                                       data:{confirm:"Are you sure?"} %>
          </div>
      </div>
        
    </div>
<% end %>

