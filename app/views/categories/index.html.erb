<h1 align="center">Listing All Categories</h1>
<div align="center">
     <%= will_paginate @categories %> 
</div>
<% @categories. each do |category|%>
  <div align="center">
    <ul class="listing">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 well">
          
          <li class="article-title">
              <%= link_to category.name, category_path(category) %>
          </li>
        
        </div>
    </div>
    </ul>
</div>
<% end %>
<div align="center">
     <%= will_paginate @categories %> 
</div>